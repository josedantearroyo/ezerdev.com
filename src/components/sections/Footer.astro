---
import Facebook from "@/icons/Facebook.astro";
import Youtube from "@/icons/Youtube.astro";
import Instagram from "@/icons/Instagram.astro";
import Linkedin from "@/icons/Linkedin.astro";
const currentYear: number = new Date().getFullYear();
---
<footer>
    <section class="grid md:grid-cols-4 md:gap-4 bg-black text-white p-4">
        <section class="md:col-span-2">
            <h4 class="text-2xl my-2">¿Listo para iniciar?</h4>
            <form class="grid md:grid-cols-2 md:gap-2">
                <div class="p-0">
                    <input type="text" class="px-4 py-2 w-full outline-0 mb-2 text-gray-900"
                           placeholder="Nombre completo"/>
                    <input type="number" class="px-4 py-2 w-full outline-0 mb-2 text-gray-900" placeholder="Teléfono"/>
                    <select class="px-4 py-2 outline-0 w-full mb-2 text-gray-900">
                        <option>Desarrollo de sitios web</option>
                    </select>
                </div>
                <div class="p-0">
                    <input type="email" class="px-4 py-2 w-full outline-0 mb-2 text-gray-900"
                           placeholder="Correo electrónico"/>
                    <input type="text" class="px-4 py-2 w-full outline-0 mb-2 text-gray-900"
                           placeholder="Nombre de la empresa"/>
                    <input type="number" class="px-4 py-2 w-full outline-0 mb-2 text-gray-900"
                           placeholder="Presupuesto"/>
                </div>
                <button type="submit" class="px-4 py-2 w-full bg-primary-color text-white md:col-span-2">Cotizar mi
                    proyecto
                </button>
            </form>
        </section>
        <section>
            <h4 class="text-2xl my-2">Hablemos</h4>
            <p>ezerdev.marketing@gmail.com</p>
            <p><span class="text-primary-color">Perú:</span> +51 916 343 540</p>
            <p class="text-primary-color">Vacantes de trabajo</p>
        </section>
        <section>
            <h4 class="text-2xl my-2">Encuentranos</h4>
            <ul class="flex gap-4 text-2xl">
                <li>
                    <a href="#">
                        <Facebook/>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <Youtube/>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <Instagram/>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <Linkedin/>
                    </a>
                </li>
            </ul>
        </section>
    </section>
    <section class="bg-white p-6">
        <span class="block text-center">@{currentYear} - ezerdev</span>
    </section>
</footer>